html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    title= "OMG-img"
    link(href="/public/style.css", rel="stylesheet" type="text/css")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Itim&display=swap" rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js")
    script(src='/public/dropzone/dropzone.js')
  include top.pug
  div#add-title
    p Add an image
  div#add-action
    div#add-url
      form(id="url-form")
        label(for="url") Submit a URL
        input(type="url" id="url" name="url" title="Enter a URL starting with https://" placeholder="https://example.com/pics/1.jpg"
         pattern="https://.*")
        input(type="submit" value="Submit")
    div#add-file
      form(action="/image-upload" class="dropzone" id="my-awesome-dropzone")
  div#your-images
    p Your images
  include content.pug
  script(src="/public/profile.js")